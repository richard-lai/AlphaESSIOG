{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "start": "tsc -p tsconfig.build.json && node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "vitest",
    "validate": "npm run build && npm run test"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "moment": "^2.30.1",
    "node-cron": "^4.2.1"
  }
}
